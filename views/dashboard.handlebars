<section>
  <h2>Create New Post</h2>

  <form class="new-post-form">
    <div>
      <label for="post-title">Title</label>
      <input type="text" id="post-title" name="post-title" />
    </div>
    <div>
      <label for="post-url">Link</label>
      <input id="post-url" name="post-url" />
    </div>
    <button type="submit" class="btn" id="create-btn">Create</button>
  </form>
</section>

{{#if posts.length}}
<section>
  <h2>Your Posts</h2>
  <ol>
    {{#each posts as |post|}}
    <li>
      {{> post-info post}}
      <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
    </li>

    {{#if post.comments}}
    <section class="card">
      <div class="header">
        <h3>comments</h3>
      </div>

      <div class="card-body">
        {{#each post.comments}} 
        <div>
          <p>{{body}} </p>
          <p>{{User.username}}, {{format_date created_at}} </p>
        </div>

        {{/each}}

      </div>

    </section>

    {{/if}}

    
    {{/each}}
  </ol>
</section>
{{/if}}
<script src="/javascript/comment"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/add-post.js"></script>
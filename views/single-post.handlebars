<div class="post">
  <article class="card">
    <div class="header flex-row justify-space-between">
      <h2>{{post.title}}</h2>
      
    </div>
    <div class="card-body">
      {{post.body}}
    </div>
  </article>


  {{#if post.comments}}
  <section class="card">
    hello world!<div>posted by {{post.User.username}} on {{format_date post.created_at}}</div>
    <div class="card-header">
      <h3>Comments</h3>
    </div>
    <div class="card-body">
      {{#each post.comments}}
      <div>
        <p>{{body}}</p>
        <p>{{post.User.username}}, {{format_date created_at}} </p>
      </div>
      {{/each}}
    </div>

  </section>
  {{/if}}

  <form class="new-comment-form">
    <div>
      <input type="hidden" id="post-id" value="{{post.id}}" />



      <label for="comment" class="form-label">Comment</label>
      <textarea type="text" name="comment" class="form-input"></textarea>

      <button type="submit" class="btn" id="submit-comment">submit</button>
    </div>
  </form>

  {{> comments post.comments}}
</div>

<script src="/javascript/comment.js"></script>